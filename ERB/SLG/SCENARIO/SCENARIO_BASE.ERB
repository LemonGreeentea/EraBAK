;사관 끼리의 관계의 기본 설정
;-------------------------------------------------
@SHARED_SETTING_RELATION
#DIM 관계

FOR LOCAL, 0, CHARANUM
	FOR LOCAL:1, 0, CHARANUM
		SIF !IS_FIXED_CHARA(LOCAL:1)
			CONTINUE
		관계 = RELATION:LOCAL:(NO:(LOCAL:1))
		SIF GROUPMATCH(관계, 0, 100)
			CONTINUE
		IF 관계 > 100
			REL_LIKE:LOCAL:(LOCAL:1) = LIMIT(REL_LIKE:LOCAL:(LOCAL:1) + 관계 *  3, 0, 1500)
			REL_HATE:LOCAL:(LOCAL:1) = LIMIT(REL_HATE:LOCAL:(LOCAL:1) + 관계 * -2, 0, 1500)
		ELSEIF 관계 < 100
			REL_LIKE:LOCAL:(LOCAL:1) = LIMIT(REL_LIKE:LOCAL:(LOCAL:1) + (100 - 관계) * -10,  0, 1500)
			REL_HATE:LOCAL:(LOCAL:1) = LIMIT(REL_HATE:LOCAL:(LOCAL:1) + (100 - 관계)  *  10,  0, 1500)
		ENDIF

		SIF !IS_COUNTRY(CFLAG:(LOCAL:1):소속)
			CONTINUE
		SIF GET_COUNTRY_BOSS(CFLAG:(LOCAL:0):소속) == LOCAL:0 && GET_COUNTRY_BOSS(CFLAG:(LOCAL:1):소속) == LOCAL:1
			CONTINUE
		SIF CFLAG:(LOCAL:0):소속 == CFLAG:(LOCAL:1):소속
			REL_LIKE:LOCAL:(LOCAL:1) = LIMIT(REL_LIKE:LOCAL:(LOCAL:1) + RAND(100, 300),  0, 1500)
		SIF GET_COUNTRY_BOSS(CFLAG:(LOCAL:0):소속) ==  LOCAL:1
			REL_LIKE:LOCAL:(LOCAL:1) = LIMIT(REL_LIKE:LOCAL:(LOCAL:1) + RAND(100, 300),  0, 1500)
	NEXT
NEXT
