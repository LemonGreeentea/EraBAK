				PRINT     
			ENDIF
		ENDIF
		LOCAL:500 ++
		;부친이 캐릭터의 경우
		SIF ID_TO_CHARA(LOCAL:1) >= 0
			PRINTFORM %SNAME(ID_TO_CHARA(LOCAL:1)), 18, LEFT%{LOCAL:2, 4, RIGHT}
		;부친이 특수 정액의 경우
		SIF ID_TO_CHARA(LOCAL:1) < 0 && GET_SPERM_NAME(LOCAL:1) != ""
			PRINTFORM %GET_SPERM_NAME(LOCAL:1), 18, LEFT%{LOCAL:2, 4, RIGHT}
	ENDIF
