	LOCAL:2 = PREGNANT_RECORD_TIMES:(ARG:0):(LOCAL:0)
	IF LOCAL:2 > 0
		LOCAL:3 = 1
		;부친이 불명 또는 이미 삭제되고 있는 경우, 그 외 취급인 것으로 CONTINUE
		;SIF LOCAL:1 == 0 || (LOCAL:1 > 0 && ID_TO_CHARA(LOCAL:1) == -1)
		;	CONTINUE
		IF LOCAL:500 >= 1
			IF LOCAL:500 % 4 == 0
				PRINTL 
