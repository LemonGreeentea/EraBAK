@COM_ABLE350
;공통 부분
CALL COM_ABLE_COMMON(350)
SIF RESULT == 0
	RETURN 0
;주인공이 플레이어 때 한정
SIF MPLY:0 != MASTER
	RETURN 0
;성 주변 마을에서의 데이트 중한정
SIF GET_PLACENAME(TFLAG:54) != "성 주변 마을"
	RETURN 0
;상처라면 불가
SIF CFLAG:(MTAR:0):행동불능상태 == 3
	RETURN 0
;키스중은 불가
