@COM_ABLE151
;공통 부분
CALL COM_ABLE_COMMON(151)
SIF RESULT == 0
	RETURN 0
;플레이어는 1명 이상
SIF MPLY_NUM <= 0
	RETURN 0
;타겟은 최대로 1명까지
SIF MTAR_NUM <= 0 && MTAR_NUM > 1
	RETURN 0
;플레이어가 행동불능이라면 불가
SIF !IS_PLAYABLE(MPLY:0)
	RETURN 0

;모든 플레이어에 대해 판정
FOR LOCAL:0, 0, MPLY_NUM
	;비잔량이 충분하지 않으면 불가
	SIF TCVAR:(MPLY:(LOCAL:0)):55 < 1000
		RETURN 0
	;Ａ가 메워지고 있다면 불가
	SIF IS_A_HOLD(MPLY:(LOCAL:0)) && !IS_EQUIP_PLAYER(MPLY:(LOCAL:0), 102) && !IS_EQUIP_PLAYER(MPLY:(LOCAL:0), 105)
		RETURN 0
	;전원이 타겟으로 걸치지 않았다고 불가
	SIF !IS_RIDE(MPLY:(LOCAL:0), MTAR:0)
		RETURN 0
NEXT
RETURN 1

;-------------------------------------------------
;메인 처리
;-------------------------------------------------
@COM151
;실행 판정
CALL COM_ORDER_COMMON
SIF RESULT == 0
	RETURN 0

;전플레이어에 대해 처리
FOR LOCAL:0, 0, MPLY_NUM
	LOCAL:2 = MPLY:(LOCAL:0)

	EXP:(LOCAL:2):배설경험치 += 1

	LOCAL:3 = 300
	LOCAL:4 = 250

	SELECTCASE ABL:(LOCAL:2):배설
		CASE 0
			TIMES LOCAL:3, 0.00
			TIMES LOCAL:4, 1.00
		CASE 1
			TIMES LOCAL:3, 0.10
			TIMES LOCAL:4, 0.60
		CASE 2
			TIMES LOCAL:3, 0.20
			TIMES LOCAL:4, 0.25
		CASE 3
			TIMES LOCAL:3, 0.40
			TIMES LOCAL:4, 0.05
		CASE 4
			TIMES LOCAL:3, 0.70
			TIMES LOCAL:4, 0.00
		CASEELSE
			LOCAL:3 = LOCAL:3 * (100 + (ABL:(LOCAL:2):배설 - 5) * 2) / 100
			LOCAL:4 = 0
	ENDSELECT

	SOURCE:(LOCAL:2):노출 = 1000
	SOURCE:(LOCAL:2):일탈 = 400
	SOURCE:(LOCAL:2):중독충족 = LOCAL:3
	SOURCE:(LOCAL:2):반감 = LOCAL:4

	IF IS_INITIATIVE(LOCAL:2)
		SOURCE:(LOCAL:2):기학 = 250
	ENDIF

	;주도권에 응한 우월·굴종의 소스 추가
	CALL ADD_SOURCE_INITIATIVE_U(LOCAL:2, 150, 150)

	;비잔량을 0으로 한다
	TCVAR:(LOCAL:2):55 = 0
NEXT

;주도권의 소재를 취득
LOCAL:11 = GET_COM_INITIATIVE()

;전 타겟으로 붙어 처리
FOR LOCAL:0, 0, MTAR_NUM
	LOCAL:1 = MTAR:(LOCAL:0)

	;타겟으로 주도권
	IF LOCAL:11 == 1 || LOCAL:11 == 2
		SOURCE:(LOCAL:1):기학 = 200
		SOURCE:(LOCAL:1):일탈 = 300
	;타겟으로 주도권이 없다
	ELSE
		SOURCE:(LOCAL:1):일탈 = 600
		SOURCE:(LOCAL:1):공포 = MAX(200 - 50 * ABL:(LOCAL:1):욕망, 0)
	ENDIF

	;주도권에 응한 우월·굴종의 소스 추가
	CALL ADD_SOURCE_INITIATIVE_U(LOCAL:1, 100, 150)
NEXT

;주도도 변화 기준치
TFLAG:49 = 3

;도착도 변화 기준치
TFLAG:50 = 4

;레즈·ＢＬ경험기준치
TFLAG:51 = 1

RETURN 1

