@DATE_EQUIP_BYPLACE(ARG:0)
;성 주변 마을
IF TFLAG:54 == 1
	TIMES SOURCE:(ARG:0):환락, 1.20
	;우후후중
	IF FLAG:우후후플래그
		TIMES SOURCE:(ARG:0):애정, 1.20
	ENDIF

;강변
ELSEIF TFLAG:54 == 2
	TIMES SOURCE:(ARG:0):환락, 1.07
	;우후후중
	IF FLAG:우후후플래그
		TIMES SOURCE:(ARG:0):노출, 1.20
		SOURCE:(ARG:0):노출 += 100
	ELSE
		;동성
		IF IS_SAMESEX(MASTER, ARG:0)
			SOURCE:(ARG:0):노출 += 5
		;이성
		ELSE
			SOURCE:(ARG:0):노출 += 20
		ENDIF
	ENDIF
	;무드의 상승
	TFLAG:37 += 1

;꽃밭
ELSEIF TFLAG:54 == 3
	;우후후중
	IF FLAG:우후후플래그
		TIMES SOURCE:(ARG:0):노출, 1.30
		SOURCE:(ARG:0):노출 += 150
	ENDIF
	;무드의 상승
	TFLAG:37 += RAND:2 + 2

;삼림
ELSEIF TFLAG:54 == 4
	;우후후중
	IF FLAG:우후후플래그
		TIMES SOURCE:(ARG:0):노출, 1.10
		SOURCE:(ARG:0):노출 += 80
	ENDIF
	;무드의 상승
	TFLAG:37 += 1

;온천
ELSEIF TFLAG:54 == 7
	;마다 턴 더러운 리셋트
	STAIN:(ARG:0):0 = 0
	STAIN:(ARG:0):1 = 0
	STAIN:(ARG:0):2 = 2
	STAIN:(ARG:0):3 = 1
	STAIN:(ARG:0):4 = 8
	STAIN:(ARG:0):5 = 0

	;우후후중
	IF FLAG:우후후플래그
		TIMES SOURCE:(ARG:0):노출, 1.30
		SOURCE:(ARG:0):노출 += 150
	ELSE
		;동성
		IF IS_SAMESEX(MASTER, ARG:0)
			SOURCE:(ARG:0):노출 += 30
		;이성
		ELSE
			SOURCE:(ARG:0):노출 += 100
		ENDIF
	ENDIF
ENDIF

