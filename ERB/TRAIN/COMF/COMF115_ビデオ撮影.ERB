;-------------------------------------------------
;선택 가부 판정
;-------------------------------------------------
@COM_ABLE115
;공통 부분
CALL COM_ABLE_COMMON(115)
SIF RESULT == 0
	RETURN 0
;플레이어는 1명
SIF MPLY_NUM != 1
	RETURN 0

;플레이어에 주도권이 필요
SIF FLAG:주도권소유자 != MPLY:0 && FLAG:주도권소유자 != -1
	RETURN 0

;플레이어가 행동불능이라면 불가
SIF !IS_PLAYABLE(MPLY:0)
	RETURN 0

;이미 촬영하고 있다면 안 돼
SIF TFLAG:70 > 0
	RETURN 0

SIF ITEM:비디오카메라 == 0 || ITEM:비디오테잎 == 0
	RETURN 0


;모든 플레이어에 대해 판정
FOR LOCAL:0, 0, MPLY_NUM
	;안면승마 되고 있다면 불가
	SIF IS_RIDDEN(MPLY:(LOCAL:0))
		RETURN 0
	;구속되고 있다면 불가
	SIF IS_BIND(MPLY:(LOCAL:0))
		RETURN 0
NEXT
RETURN 1

;-------------------------------------------------
;메인 처리
;-------------------------------------------------
@COM115
;실행 판정
CALL COM_ORDER_COMMON
SIF RESULT == 0
	RETURN 0

ITEM:비디오테잎 --

;●전플레이어에 대해 처리
FOR LOCAL:0, 0, MPLY_NUM
	LOCAL:2 = MPLY:(LOCAL:0)

	SOURCE:(LOCAL:2):기학 = 20
	SOURCE:(LOCAL:2):노출 = 800

	;주도권에 응한 우월·굴종의 소스 추가
	CALL ADD_SOURCE_INITIATIVE_U(LOCAL:2, 50, 160)
NEXT

;●플레이어 이외의 전참가자에 대해 처리
FOR LOCAL:0, 0, CHARANUM
	SIF !IS_PARTICIPATE_TRAIN(LOCAL) || LOCAL:0 == MPLY:0
		CONTINUE

	DOWNBASE:LOCAL:체력 += 80

	SOURCE:LOCAL:일탈 = 80
	SOURCE:LOCAL:노출 = 1000
	SOURCE:LOCAL:불안 = 30

	;주도권에 응한 우월·굴종의 소스 추가
	CALL ADD_SOURCE_INITIATIVE_U(LOCAL, 160, 80)
NEXT

;주도도 변화 기준치
TFLAG:49 = 3

;도착도 변화 기준치
TFLAG:50 = 2

;레즈·ＢＬ경험기준치
TFLAG:51 = 4

TFLAG:70 = 1
TFLAG:71 = 0

FOR LOCAL, 0, CHARANUM
	SIF !IS_PARTICIPATE_TRAIN()
		CONTINUE
		TFLAG:71 += SUM_EX(LOCAL)
NEXT

RETURN 1


;-------------------------------------------------
;계속 커맨드인가 어떤가를 설정
;-------------------------------------------------
@COM_IS_EQUIP115
;계속 커맨드 한편 필터링 불가
RETURN 2
;-------------------------------------------------
;계속 상태의 처리
;-------------------------------------------------
@COM_EQUIP115(ARG:0)
;●전플레이어에 대해 판정
FOR LOCAL:0, 0, MEQUIP_PLAYER_NUM:(ARG:0)
	LOCAL:2 = MEQUIP_PLAYER:(ARG:0):(LOCAL:0)

	DOWNBASE:(LOCAL:2):체력 += 10

	SOURCE:(LOCAL:2):기학 += 10
	SOURCE:(LOCAL:2):노출 += 500
	SOURCE:(LOCAL:2):일탈 += 10
	SOURCE:(LOCAL:2):불안 += 15

	;주도권에 응한 우월·굴종의 소스 추가
	CALL ADD_SOURCE_INITIATIVE_U(LOCAL:2, 10, 50)

	;도착도 변화 기준치
	TCVAR:(LOCAL:2):50 += 3
NEXT


;●플레이어 이외의 전참가자에 대해 처리
FOR LOCAL:0, 0, CHARANUM
	SIF !IS_PARTICIPATE_TRAIN(LOCAL) || LOCAL:0 == MPLY:0
		CONTINUE
	;돌아가고 있으면 안 돼
	SIF TCVAR:(LOCAL:0):53
		CONTINUE
	DOWNBASE:LOCAL:체력 += 40

	SOURCE:LOCAL:일탈 = 10
	SOURCE:LOCAL:노출 = 700
	SOURCE:LOCAL:불안 = 10

	EXP:LOCAL:촬영경험 ++

	;주도권에 응한 우월·굴종의 소스 추가
	CALL ADD_SOURCE_INITIATIVE_U(LOCAL, 80, 20)

	;도착도 변화 기준치
	TCVAR:LOCAL:50 += 3
NEXT

