@COM_ABLE306
;공통 부분
CALL COM_ABLE_COMMON(306)
SIF RESULT == 0
	RETURN 0
;주인공이 플레이어 때 한정
SIF MPLY:0 != MASTER
	RETURN 0
;데이트중에서 장소가 강변, 꽃밭, 삼림 이외라면 무리
SIF TFLAG:54 && !GROUPMATCH(GET_PLACENAME(TFLAG:54), "강변", "꽃밭", "삼림")
	RETURN 0
;임월 or상처라면 불가
SIF CFLAG:(MTAR:0):행동불능상태 == 행동불능_임월 || CFLAG:(MTAR:0):행동불능상태 == 3
	RETURN 0
;키스중은 불가
SIF IS_EQUIP(MPLY:0, 342)
	RETURN 0
RETURN 1

;-------------------------------------------------
;메인 처리
;-------------------------------------------------
@COM306
CALL COM_SLG_TRAIN_MAIN_PROCESS(GETNUM(ABL, "가창"), 0)

RETURN 1

