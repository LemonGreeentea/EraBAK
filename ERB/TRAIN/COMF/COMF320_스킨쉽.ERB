;-------------------------------------------------
;선택 가부 판정
;-------------------------------------------------
@COM_ABLE320
;공통 부분
CALL COM_ABLE_COMMON(320)
SIF RESULT == 0
	RETURN 0
;주인공 이외가 실행하는 경우, 호감도가 500이상 필요
SIF MPLY:0 != MASTER && CFLAG:(MPLY:0):2 < 500
	RETURN 0
