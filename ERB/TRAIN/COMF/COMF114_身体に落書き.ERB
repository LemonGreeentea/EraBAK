;-------------------------------------------------
;선택 가부 판정
;-------------------------------------------------
@COM_ABLE114
;공통 부분
CALL COM_ABLE_COMMON(114)
SIF RESULT == 0
	RETURN 0
;플레이어는 1명
SIF MPLY_NUM != 1
	RETURN 0

;타겟 1명 이상
SIF MTAR_NUM <= 0
	RETURN 0
;플레이어가 행동불능이라면 불가
SIF !IS_PLAYABLE(MPLY:0)
	RETURN 0

SIF ITEM:매직 == 0 && ITEM:A_매직 == 0
	RETURN 0


;모든 플레이어에 대해 판정
FOR LOCAL:0, 0, MPLY_NUM
	;안면승마 되고 있다면 불가
	SIF IS_RIDDEN(MPLY:(LOCAL:0))
		RETURN 0
	;키스중이라면 불가
	SIF IS_EQUIP(MPLY:(LOCAL:0), 20)
		RETURN 0
	;페라·파이즈리·귀두 페라중이라면 불가
	SIF IS_EQUIP_PLAYER(MPLY:(LOCAL:0), 11, 12, 107)
		RETURN 0
	;이라마·촉수펠라 되고 있다면 불가
	SIF IS_EQUIP_TARGET(MPLY:(LOCAL:0), 90, 210)
		RETURN 0
	;구속되고 있다면 불가
	SIF IS_BIND(MPLY:(LOCAL:0))
		RETURN 0
NEXT
;모든 타겟으로 붙어 판정
FOR LOCAL:0, 0, MTAR_NUM
	;삽입중이라면 불가
	SIF IS_INSERT_SINGLE(MTAR:(LOCAL:0), "전")
		RETURN 0
	;타겟이 이미 낙서가 끝난 상태라면 불가
	SIF IS_EQUIP_TARGET(MTAR:0, 114)
		RETURN 0
NEXT
RETURN 1

