@COM_ABLE355
;공통 부분
CALL COM_ABLE_COMMON(355)
SIF RESULT == 0
	RETURN 0
;주인공이 플레이어 때 한정
SIF MPLY:0 != MASTER
	RETURN 0
;강변에서의 데이트 중한정
