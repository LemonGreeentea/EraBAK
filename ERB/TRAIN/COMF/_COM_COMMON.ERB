;-------------------------------------------------
;커맨드의 성공 여부를 TFLAG:18에 세트 하는 함수
;ARG:0=캐릭터 번호, ARG:1=대성공 기본 확률, ARG:2=실패 기본 확률
;-------------------------------------------------
@JUDGE_COM_RESULT(ARG:0, ARG:1, ARG:2)
LOCAL:0 = 0

;기분의 영향
SELECTCASE TOSTR_EMOTION(ARG:0)
	CASE "행복"
		LOCAL:0 += 30
	CASE "기쁨"
		LOCAL:0 += 15
	CASE "양호"
		LOCAL:0 += 5
	CASE "원한"
		LOCAL:0 -= 50
	CASE "분노"
		LOCAL:0 -= 20
	CASE "분개"
		LOCAL:0 -= 8
	CASE "암울"
		LOCAL:0 -= 40
	CASE "슬픔"
		LOCAL:0 -= 10
	CASE "우울"
		LOCAL:0 -= 5
	CASE "광기"
		LOCAL:0 -= 40
	CASE "공포"
		LOCAL:0 -= 10
	CASE "겁냄"
		LOCAL:0 -= 5
ENDSELECT

SIF TALENT:(ARG:0):반항적
	LOCAL:0 -= 5

SIF TALENT:(ARG:0):꿋꿋함
	LOCAL:0 -= 5

SIF TALENT:(ARG:0):솔직함
	LOCAL:0 += 5

SIF TALENT:(ARG:0):프라이드높음
	LOCAL:0 -= 15

SIF TALENT:(ARG:0):프라이드낮음
	LOCAL:0 += 5

SIF TALENT:(ARG:0):주목받기원함
	LOCAL:0 += 2

SIF TALENT:(ARG:0):억압
	LOCAL:0 -= 10

SIF TALENT:(ARG:0):고고함
	LOCAL:0 -= 10

SIF TALENT:(ARG:0):남성혐오 && IS_MALE(MASTER)
	LOCAL:0 -= 7

SIF TALENT:(ARG:0):여성혐오 && IS_FEMALE(MASTER)
	LOCAL:0 -= 7

SIF TALENT:MASTER:매혹
	LOCAL:0 += 6

SIF TALENT:MASTER:수수께끼의매력
	LOCAL:0 += 6

;호감도
LOCAL:0 += CFLAG:(ARG:0):2 / 50

;의존도
LOCAL:0 += CFLAG:(ARG:0):3 / 150

SIF TALENT:(ARG:0):친애
	LOCAL:0 += 40

SIF TALENT:(ARG:0):연모
	LOCAL:0 += 20

SIF TALENT:(ARG:0):친구
	LOCAL:0 += 20

SIF TALENT:(ARG:0):연인
	LOCAL:0 += 20

SIF TALENT:(ARG:0):예속
	LOCAL:0 += 30

SIF TALENT:(ARG:0):복종
	LOCAL:0 += 10

SIF TALENT:(ARG:0):주인
	LOCAL:0 += 20

SIF TALENT:(ARG:0):소유자
	LOCAL:0 += 30

LOCAL:0 = LIMIT(LOCAL:0, 0, 100)

LOCAL:2 = RAND:1000

;대성공
IF LOCAL:2 < ARG:1 * 10 + LOCAL:0 / 2 + (TFLAG:6 != 0) * 50
	TFLAG:18 = 1
;실패(실패율의 하한은 0.5%)
ELSEIF 999 - LOCAL:2 < MAX(5, ARG:2 * 10 - LOCAL:0 - (TFLAG:6 != 0) * 30)
	TFLAG:18 = -1
ELSE
	TFLAG:18 = 0
ENDIF

