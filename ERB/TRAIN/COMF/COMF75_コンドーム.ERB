@COM_ABLE75
;공통 부분
CALL COM_ABLE_COMMON(75)
SIF RESULT == 0
	RETURN 0
;플레이어는 1명 이상
SIF MPLY_NUM <= 0
	RETURN 0
;플레이어가 행동불능이라면 불가
SIF !IS_PLAYABLE(MPLY:0)
	RETURN 0
FOR LOCAL, 0, MPLY_NUM
	;플레이어가Ｐ삽입중이라면 불가
	SIF IS_INSERT_SINGLE(MPLY:(LOCAL:0), "Ｐ")
		RETURN 0
	;플레이어에 자지가 필요
	SIF !HAS_PENIS(MPLY:(LOCAL:0))
		RETURN 0
	;이미 고무 붙이고 있다면 안 돼
	SIF IS_EQUIP_PLAYER(MPLY:(LOCAL:0), 75)
		RETURN 0
NEXT
;콘돔이 인원수분 필요
SIF ITEM:콘돔 < MPLY_NUM && ITEM:A_콘돔 < MPLY_NUM
	RETURN 0
;플레이어가 구속중이라면 불가
SIF IS_BIND(MPLY:0)
	RETURN 0
RETURN 1

