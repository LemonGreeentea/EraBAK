	ELSEIF TFLAG:52 >= 3000
		SOURCE:(ARG:0):감응 += 500
	ELSEIF TFLAG:52 >= 500
		SOURCE:(ARG:0):감응 += 150
	ELSEIF TFLAG:52 >= 100
		SOURCE:(ARG:0):감응 += 50
	ENDIF

	SOURCE:(ARG:0):감응 += TFLAG:53 * 100
	SOURCE:(ARG:0):일탈 += TFLAG:58 / 3
ENDIF

;마약 먹고 있으면 환희가 들어간다
