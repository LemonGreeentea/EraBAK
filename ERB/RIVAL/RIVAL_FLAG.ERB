@ADD_RIVAL(ARG:0, ARGS, ARG:1)
VARSET LOCAL

IF ARGS == "관심도"
    LOCAL:0 = ARG:1 * CONFIG:506 + RAND(10)
    SIF CONFIG:507 != 0
        LOCAL:1 = (ARG:1 / 2) * CONFIG:507 + RAND(10)
ELSEIF ARGS == "굴복도"
    LOCAL:2 = ARG:1 * CONFIG:506 + RAND(10)
ENDIF
IF CONFIG:509
    PRINTFORM %ANAME(ARG:0)%:관심도 + {LOCAL:0, 2}(합계: {CFLAG:(ARG:0):관심도, 4}) 
    PRINTFORML 굴복도 + {LOCAL:2, 2}(합계: {CFLAG:(ARG:0):굴복도, 4})
ENDIF
CFLAG:(ARG:0):관심도 += LOCAL:0
CFLAG:(ARG:0):굴복도 += LOCAL:2
CFLAG:(ARG:0):호감도 -= LOCAL:1