	SLAVEMARKET_SPECIALGOODS = RAND:MIN(SELECTED_CHARA_NUM, SLAVEMARKET_MAX_GOODS)
	SLAVEMARKET_PRICE:SLAVEMARKET_SPECIALGOODS /= 2
ELSE
	SLAVEMARKET_SPECIALGOODS = SLAVEMARKET_MAX_GOODS
ENDIF
RETURN 1

