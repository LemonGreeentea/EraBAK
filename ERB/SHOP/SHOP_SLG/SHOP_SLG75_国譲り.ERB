@SHOP_SLG_CHECK75
SIF CFLAG:MASTER:행동불능상태 != 0
	RETURN 0
SIF IS_SP_COUNTRY(CFLAG:MASTER:소속)
	RETURN 0
SIF GET_COUNTRY_BOSS(CFLAG:MASTER:소속) != MASTER
	RETURN 0
