	PRINTFORM  체력:
	CALL PRINT_GRADATIONBAR(BASE:MASTER:체력, MAXBASE:MASTER:체력, 10, 0xFF5E7E, , 1)
	PRINTL 
	;계절과 음력
	IF DISPLAY_SEASON() == "봄"
		PRINT  
		SETCOLOR 0xE597B2
		PRINTFORM %@"%DISPLAY_SEASON(DAY)%의 %DISPLAY_MONTH_OLD(DAY)% {DISPLAY_WEEK(DAY)}주차", 11, LEFT%
	ELSEIF DISPLAY_SEASON() == "여름"
