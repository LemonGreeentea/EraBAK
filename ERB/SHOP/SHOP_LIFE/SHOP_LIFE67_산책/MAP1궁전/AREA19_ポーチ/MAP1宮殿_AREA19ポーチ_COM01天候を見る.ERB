;후보 추가
FOR L_COUNTER, 0, CHARANUM
	RESULT = 0
	CALL SHOP_LIFE67_MAP1_AREA19_COM1_CHECKCHARA(L_COUNTER)
	SIF !RESULT
		CONTINUE
	CALL COM_AUTO_RANDOMIZED_WEIGHTED_VALUE(L_COUNTER, CFLAG:L_COUNTER:호감도)
NEXT

