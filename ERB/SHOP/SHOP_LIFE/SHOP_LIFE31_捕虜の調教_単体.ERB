	CASE 선택지_석방
		CALL PRISONER_TRAIT_RELEASE(ARG:0)
	CASE 선택지_해방
		CALL PRISONER_TRAIT_FREE(ARG:0)
	CASE 선택지_추방
		CALL PRISONER_TRAIT_BANISH(ARG:0)
	CASE 선택지_처형
		CALL PRISONER_TRAIT_EXECUTE(ARG:0)
	CASE 선택지_촉수처형
		CALL PRISONER_TRAIT_EXECUTE_TENTACLE(ARG:0)
	CASE 선택지_캔슬
		RETURN 1
ENDSELECT

SIF RESULT == 1
	RETURN 

