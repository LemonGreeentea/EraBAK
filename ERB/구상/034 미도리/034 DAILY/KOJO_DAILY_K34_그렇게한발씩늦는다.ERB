@KOJO_DAILY_K34_ONESTEPBEHIND_DECISION(대상)
#DIM 대상

;자국에 있으면서 포로가 아니며 안면이 있는게 아니면 스킵
SIF CHECK_KOJO_DAILY_HAPPEN(대상, 1, 0, 1) == 0
	RETURN 0
;모모이 33
SIF CHECK_KOJO_DAILY_HAPPEN(33, 1, 0, 1) == 0 
	RETURN 0
;유즈 35
SIF CHECK_KOJO_DAILY_HAPPEN(35, 1, 0, 1) == 0
	RETURN 0

;일회용 데일리

SIF KDVAR:대상:미도리_그렇게한발씩늦는다
	RETURN 0

;단계 아닐시 스킵
SIF ! TALENT:대상:연모
	RETURN 0
SIF ! TALENT:33:친애
	RETURN 0

;아나타가 자지가 없으면 스킵
SIF !HAS_PENIS(MASTER)
	RETURN 0

RETURN CHECK_KOJO_DAILY_HAPPEN(대상, 1, 0, 1)

RETURN 0
