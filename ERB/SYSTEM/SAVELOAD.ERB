FOR LOCAL, 0, VARSIZE("로드가능")
	CHKDATA LOCAL
	;CHKDATA는 읽을 수 있는 데이터 때 0을 돌려준다  어떻게든 해 있어
	로드가능:LOCAL = (RESULT == 0)
	IF RESULT != 1
		세이브명:LOCAL = %RESULTS%
	ELSE
		세이브명:LOCAL = ----
	ENDIF
NEXT

FOR LOCAL, 0, AUTOSAVE_DOMAIN_NUM
	CHKDATA 1000 + LOCAL
	오토세이브로드가능:LOCAL = (RESULT == 0)
	IF RESULT != 1
		오토세이브명:LOCAL = %RESULTS%
	ELSE
		오토세이브명:LOCAL = ----
	ENDIF
NEXT

CHKDATA 9999
퀵세이브로드가능 = (RESULT == 0)
IF RESULT != 1
	퀵세이브명 = %RESULTS%
ELSE
	퀵세이브명 = ----
ENDIF

