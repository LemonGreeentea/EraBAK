@CHARACTER_EDIT_UI_EXP(대상)
#DIM 대상
LOCAL:1 = 0
FOR LOCAL, 0, VARSIZE("EXP")
	SIF EXPNAME:LOCAL == "" || STRFIND(EXPNAME:LOCAL, "경험치") != -1
		CONTINUE
	PRINTBUTTON @"% "[" + EXPNAME:LOCAL + "]" , 15, LEFT%:", LOCAL

	PRINTFORM  {EXP:대상:LOCAL, 5, RIGHT} 
	LOCAL:1 ++
	SIF LOCAL:1 != 0 && LOCAL:1 % 4 == 0
		PRINTL
NEXT
PRINTL

@CHARACTER_EDIT_INPUT_EXP(대상, 입력치)
#DIM 대상
#DIM 입력치

SIF !INRANGE(입력치, 0, VARSIZE("EXP") - 1) || STRFIND(EXPNAME:입력치, "경험치") != -1
	RETURN 0

PRINTFORML 치를 입력 현재가 {EXP:대상:입력치} 
PRINTFORML (%EXPNAME:입력치%를 편집중)

INPUT

SIF RESULT >= 0
	EXP:대상:입력치 = RESULT
