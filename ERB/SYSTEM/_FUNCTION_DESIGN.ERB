;  콘피그라든지 헬프의 디자인 정리용
;  %FILL_SPACE("텍스트", 24)%
;============================================================================== 
@FILL_SPACE(ARGS:0, ARG:1)
	#FUNCTIONS
	;지정된 텍스트의 아야 자수를 체크
	LOCALS:0 = %ARGS:0%
	STRLENFORM %LOCALS:0%
	LOCAL:1 = RESULT:0

	FOR LOCAL:0, 0, ARG:1 - LOCAL:1
		LOCALS:0 += " "
	NEXT
	LOCALS:0 = %LOCALS:0%-

	RETURNF LOCALS:0

