		LOCAL:1 = CFLAG:(LOCAL:0):2
		LOCAL:2 = LOCAL:0
	ENDIF
NEXT

;호감도 5000이상의 캐릭터가 있는 경우
IF LOCAL:1 >= 5000
	;구상의 전용 엔딩이 있으면 호출한다
	RESULT = 0
	CALL KOJO_DEAD_ENDING(LOCAL:2)
	IF !RESULT
		PRINTFORMW 여기에, %ANAME(MASTER)%의 역사는 막을 닫았다…
		PRINTFORMW                             - 종 -
		WAIT
	ENDIF
