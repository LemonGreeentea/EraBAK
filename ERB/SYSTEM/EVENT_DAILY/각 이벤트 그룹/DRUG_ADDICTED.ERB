;---------------------
;기본적인 발생 확률(1000분 율 100으로 10%)
;이것에 콘피그 항목의 발생 빈도를 걸칠 수 있으므로, 반드시 이 대로는 되지 않는다
;---------------------
@EVENT_DAILY_DRUG_ADDICT_RATE()
RETURN 1000


;---------------------
;확률 이외의 발생 판정
;0기 이후가 되면 발생한다든가, 데일리측에서 이용하고 있는 변수가-1이라면 일으키지 않는다  같은 튕기는 방법을 할 경우에 사용한다
;---------------------
@EVENT_DAILY_DRUG_ADDICT_DECISION()
RETURN 1

;---------------------
;장르
;콘피그 설정으로 사용
;---------------------
@EVENT_DAILY_DRUG_ADDICT_GENRE()
RETURN 데일리_장르_에로


;---------------------
;특정의 조건을 채우는 캐릭터를 랜덤에 선택하는 경우에 이용
;다른 함수는 필수이지만, 이것만은 없어도 좋다  라고 할까 퍼포먼스에 영향을 주므로 불필요하면 만들어서는 안 된다
;대상이 존재하지 않고 데일리를 개시 할 수 없는 경우는 0을 돌려주는 것으로 데일리의 발생을 캔슬한다
;---------------------
@EVENT_DAILY_DRUG_ADDICT_SETTARGET()
SIF DVAR:데일리_장르세부_NTR == 0
	RETURN 0
FOR LOCAL, 0, CHARANUM
	IF !CFLAG:LOCAL:포로처 && CFLAG:LOCAL:특수상태 != 특수상태_사망 && IS_FEMALE(LOCAL)
		;CFLAG:약물의존에 응해 판정（최대 30）. TALENT 약물의존 소유라면 50%까지 증가.
		IF (GETBIT(TALENT:LOCAL:음란계, 소질_음란_약물중독) ? 50 # MIN(CFLAG:LOCAL:약물의존 / 7, 30)) > RAND:100
			DAILY_TARGET:DAILY_TARGET_NUM = LOCAL
			DAILY_TARGET_NUM ++
		ENDIF
	ENDIF
NEXT

SIF DAILY_TARGET_NUM < 1
	RETURN 0
RETURN 1


;---------------------
;본체
;이벤트가 발생했을 경우는 1, 발생하지 않았던 경우는 0을 돌려준다
;발생하지 않았다는 것은 예를 들면, 특정 조건을 채우는 캐릭터로부터 랜덤에 한사람 선택하는 데일리로, 원래 그 조건을 채우는 캐릭터가 한사람도 없는 것 같은 때
;구사양으로 만든 적 있는 사람용으로 말하면 「구사양의 데일리 본체 첫머리에서-1을 돌려주는 것 같은 상황」
;---------------------
@EVENT_DAILY_DRUG_ADDICT()
#DIM 대상
#DIMS 간역

FOR LOCAL, 0, DAILY_TARGET_NUM
	대상 = DAILY_TARGET:LOCAL
	PRINTFORMW %조사처리(ANAME(대상),"는")%, 약물의 금단증상에 괴로워하고 있는 것 같다……
	SELECTCASE RAND:13
		CASE 0
			PRINTFORML %조사처리(ANAME(대상),"는")% 증상에 견디고일까, 이상한 듯한 약팔이에 걸쳐를 붙인 것 같다
			PRINTFORML 약팔이는 약과 교환에, %ANAME(대상)%의 육체를 요구했다
			PRINTFORML 약을 위해서라면, 당신의 정조 따위 어떻든지 좋았다. %조사처리(ANAME(대상),"는")% 스스로 옷을 벗어, 약팔이와 사귀었다……
			PRINTFORML 백탁 투성이로 침대에 늘어진 %ANAME(대상)%에 약을 던지고 건네주어, 남자는 떠났다
			간역 = 약의판매원
		CASE 1
			PRINTFORML %조사처리(ANAME(대상),"는")% 진찰료를 벌기 (위해)때문에, 창녀로서 일한 것 같다
			PRINTFORML %ANAME(대상)%의 섹스의 기술은, 손님을 몹시 만족시킨 것 같다
			PRINTFORML 몇 사람이나 되는 남자가 %조사처리(ANAME(대상),"를")% 사서는, 그 고기구멍에 정액을 따라 갔다
			PRINTFORML 만 하루 더럽혀져 이득있을까 말까한 돈으로, %조사처리(ANAME(대상),"는")% 얼마 안 되는약을 손에 넣은 것 같다……
			간역 = 창관의손님
		CASE 2
			PRINTFORML %조사처리(ANAME(대상),"는")% 질 나쁜 남자들에게 윤간되고 있다
			PRINTFORML 약을 양보하는 것으로, 교환에 육체가 요구된 것이다
			PRINTFORML 금단증상에 괴로워하는 %ANAME(대상)%에, 선택지 따위 있지 않는 것이나 마찬가지였다
			PRINTFORML 남자들은 껄껄 웃으면서, %ANAME(대상)%의 모든 구멍에 차례차례로 육봉을 쑤셔 넣어 간다
			PRINTFORML 이윽고, 백탁 투성이가 되고 어안이 벙벙히 하는 %ANAME(대상)%에, 남자들은 쓰레기약을 내던져 떠났다……
			간역 = 건달
		CASE 3
			PRINTFORML %ANAME(대상)%파리에들 네에들과 웃으면서, 남자들에게 윤간되고 있다
			PRINTFORML slum의 악한들이 %ANAME(대상)%에 이상한 듯한 약품을 팔아, 그 자리에서 사용한 것이다
			PRINTFORML 범해지고 있다는데, %조사처리(ANAME(대상),"는")% 행복하게, 그들 위에서 스스로 허리를 흔드는
			PRINTFORML 남이 질내에 자식을 털어 놓으면, %조사처리(ANAME(대상),"는")% 견딜 수 없다고 하도록(듯이) 등을 뒤로 젖혀 절정 했다……
			간역 = 건달
		CASE 4
			PRINTFORML %조사처리(ANAME(대상),"는")% 진찰료를 벌기 (위해)때문에, 지나가는 남자에 신체를 판 것 같다
			PRINTFORML 숙소에 데리고 들어가지면, %조사처리(ANAME(대상),"는")% 스스로 적극적으로 남자의 것을 빨아, 잡아당겨, 그의 위에서 허리를 흔드는
			PRINTFORML 한 손에 쥐고 남는 회수남을 사정시킨 적도 있어, 남자 금 지불은 몹시 좋았다……
			PRINTFORML %조사처리(ANAME(대상),"는")% 번 돈으로, 얼마 안 되는약을 손에 넣은 것 같다……
			간역 = 지나가는남자
		CASE 5
			PRINTFORML %조사처리(ANAME(대상),"는")% 진찰료를 벌기 (위해)때문에, 지나가는 남자에 신체를 팔려고 했다
			PRINTFORML ……가, 그것이 본고장의 갱의 눈에 닿아, %조사처리(ANAME(대상),"는")% 납치되어 버렸다!
			PRINTFORML 그렇게 약을 갖고 싶으면 줄게와 그들은 자신들의 아지트에서, %ANAME(대상)%에 이상한 듯한 약을 쳐박았다
			PRINTFORML 곧 약이 돌 수에로 웃기 시작한 %조사처리(ANAME(대상),"를")%, 남자들은 차례차례로 범해 갔다……
			PRINTFORML %조사처리(ANAME(대상),"를")% 심하게 윤간한 후, 그들은 백탁 투성이의 %조사처리(ANAME(대상),"를")% 뒷골목에 던져 버렸다……
			PRINTFORML 이상한 듯한 약의 효과로, %ANAME(대상)%의 중독증상은 한층 더 심해 져 버린 것 같다
			간역 = 건달
		CASE 6
			PRINTFORML 약물의 효과로 이상해져 버린 %조사처리(ANAME(대상),"는")%, 부랑자에게 말을 건 것 같다
			PRINTFORML 치구 투성이의 육봉을 스스로 빨아 그들에게 스스로 다리를 열어, 성교를 조른다
			PRINTFORML 자궁을 푹푹 찔릴 때, 의식마다 바람에 날아갈 것 같을 정도의 쾌감이 %조사처리(ANAME(대상),"를")% 덮쳤다……
			PRINTFORML 남이 떠난 뒤에는, 몇 발과 사정된 백탁을 고기구멍으로부터 흘려 보내는 %ANAME(대상)%만이 남아 있었다……
			간역 = 부랑자
		CASE 7
			PRINTFORML 진찰료를 벌기 (위해)때문에, %조사처리(ANAME(대상),"는")% 스트립 쇼에 출연한 것 같다
			PRINTFORML 추잡한 의상을 입어 스테이지상에 뛰어 올라 유방이나 비부를 강조하는 댄스를 춤춘다
			PRINTFORML 의상을 벗어 던지면, 공공연하게 된 흠뻑 젖는 암컷구멍을, 질척질척 휘저어 간다
			PRINTFORML 이윽고 흥분한 손님이 스테이지에 오르면, 스트립 쇼는 도마 쇼에 상연 목록을 변경했다……
			PRINTFORML 흥행의 보수에, %조사처리(ANAME(대상),"는")% 한껏 약을 받아 온 것 같다
			간역 = 스트립쇼의손님
		CASE 8
			PRINTFORML 뒷골목에 가게를 짓는 이상한 듯한 상인을, %조사처리(ANAME(대상),"는")% 방문한 것 같다
			PRINTFORML 기분이 좋은 것에, 상인은 그 자리에서, 무료로 %ANAME(대상)%에 약을 행동했다
			PRINTFORML 상인은 조속히 약을 사용해 트립한 %조사처리(ANAME(대상),"를")% 쓰러트리고, 옷을 벗겨내, 범하기 시작한다
			PRINTFORML 강간되고 있다는데, 약의 효능이 %조사처리(ANAME(대상),"를")% 좋아해 미치게 해 질내사정을 조르게 한다
			PRINTFORML 결국 그녀가 퇴점 한 것은, 한 손으로 부족한 수의 정액을 질내에 토해내지고 나서였다……
			PRINTFORML 범해졌다는데, 그녀는, 약을 위해서(때문에) 그 가게에 다니는 것을 생각하고 있었다……
			간역 = 약의판매원
		CASE 9
			PRINTFORML 약을 요구해, %조사처리(ANAME(대상),"는")% 뒷골목의 이상한 듯한 상인을 방문한 것 같다
			PRINTFORML 금이 없는 것을 전하면, 상인은 섹스와 교환에 약을 팔아 주면 %ANAME(대상)%에 고한다
			PRINTFORML 약을 위해서라면과 %조사처리(ANAME(대상),"는")% 스스로 옷을 벗어, 벽에 손을 다하고 그에게 엉덩이를 내밀었다
			PRINTFORML 상인은 %조사처리(ANAME(대상),"를")% 비웃음 있으면서, 그녀의 고기구멍에 페니스를 쑤셔 넣었다……
			PRINTFORML 뒷골목에, 여자의 교성이 울려 퍼진다……
			PRINTFORML %조사처리(ANAME(대상),"가")% 약을 손에 넣은 것은, 대량의 백탁이 고기구멍에 흘려 넣어진 후였다
			간역 = 약의판매원
		CASE 10
			PRINTFORML 야무지지 못한 아헤얼굴을 쬐면서, %조사처리(ANAME(대상),"는")% 남자들에게 윤간되고 있다
			PRINTFORML 이상한 듯한 남자에게 약을 뽑아 받았을 때까지는 좋지만, 트립 하고 있는 곳을 다른 남자들에게 팔린 것이다
			PRINTFORML 입을, 엉덩이를, 암컷구멍에 육봉을 쑤셔 넣어져 삽입질 될 때, %ANAME(대상)%의 머리에 강렬한 쾌락이 달린다……
			PRINTFORML 일이 끝난 후, 약팔이의 남자는, 백탁 투성이가 되고 쓰러져 엎어진 %ANAME(대상)%에, 예라고 해 잔돈을 내던졌다……
			IF CFLAG:대상:소속 == CFLAG:MASTER:소속
				CALL ICPRINT(@"금<1>을 손에 넣었다", "L", 칼라_주의)
				MONEY += 1
			ENDIF
			간역 = 건달
		CASE 11
			PRINTFORML %조사처리(ANAME(대상),"는")%, 약의 판매원의 아래를 방문했다
			PRINTFORML 새로운 약의 실험대가 된다면 싼 편이어 팔아 줄게라고 말해져, %조사처리(ANAME(대상),"는")% 두말 할 것 없이 수긍했다
			PRINTFORML 건네받은 약을 마시든지, 강렬한 트립감이 %조사처리(ANAME(대상),"를")% 덮친다
			PRINTFORML 군침을 늘어뜨려, 삐걱삐걱 전신을 경련시키는 %조사처리(ANAME(대상),"를")% 판매원은 덮어눌러, 무리하게 범하기 시작했다……
			PRINTFORML 것이 끝난 후, %조사처리(ANAME(대상),"는")% 약속대로약을 양보해 받은 것 같다
			간역 = 약의판매원
		CASE 12
			PRINTFORML 금은 없지만 약을 팔아 줘, 그렇게 간절히 부탁한 %ANAME(대상)%에, 약의 판매원은 신체를 내미도록 요구했다
			PRINTFORML 약을 위해서라면 뭐든지 하면, %조사처리(ANAME(대상),"는")% 스스로 옷을 벗어, 판매원의 페니스를 빨기 시작한다
			PRINTFORML 거기에 기분을 좋게 했는지, 판매원은 %ANAME(대상)%의 목덜미에 주사기를 찔러, 강렬한 약을 주입했다
			PRINTFORML 순간, %조사처리(ANAME(대상),"는")% 트립 해, 그 입으로부터는 천한 말이 흘러나온다
			PRINTFORML 판매원은 %조사처리(ANAME(대상),"를")% 덮어눌러, 그 고기구멍에 한껏 백탁을 토해내 갔다……
			간역 = 약의판매원
	ENDSELECT
	CALL FUCK_RAPE(대상, GET_SPERM_ID("건달"), @"%간역%의 \@ RAND:2 ? 페니스 # 입술\@", @"%간역%")
	CFLAG:대상:약물의존 += RAND(50, 100)

	PRINTFORMW
NEXT
RETURN 1

