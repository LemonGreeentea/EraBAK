				SETCOLOR 칼라_파초록
				PRINTPLAINFORM [{LOCAL:0, 3}] %TRAINNAME:(LOCAL:0), 21, LEFT%
			ELSE
				IF COM_FILTER:(LOCAL:0)
					SETCOLOR 칼라_선택불가
				ENDIF
				PRINTFORM [{LOCAL:0, 3}] %TRAINNAME:(LOCAL:0), 21, LEFT%
			ENDIF
			RESETCOLOR
			LOCAL:25 ++
		ENDIF
		LOCAL:22 ++
	ENDIF
NEXT
PRINTL 
