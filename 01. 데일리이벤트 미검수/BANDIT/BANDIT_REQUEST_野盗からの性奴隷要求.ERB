;---------------------
@EVENT_DAILY_BANDIT_REQUEST_DECISION()
#DIM 도둑
도둑 = GET_COUNTRY_FROM_ID(SP_COUNTRY_ID:(특수세력_도둑))
SIF 도둑 == -1
	RETURN 0
SIF CFLAG:MASTER:소속 == 도둑
	RETURN 0
RETURN DAY >= 15

